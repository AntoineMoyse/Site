@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "S'inscrire";
}

<h1 style="margin-top:110px;">@ViewData["Title"]</h1>
<h4 id="external-login-title">Associer votre @Model.ProviderDisplayName compte.</h4>
<hr />

<p id="external-login-description" class="text-info">
    L'authentification avec <strong>@Model.ProviderDisplayName</strong> a été réalisé avec succès.
    Veuillez entrer une adresse email pour le site et cliquer sur le bouton S'inscrire pour finir
    votre inscription.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">S'inscrire</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
