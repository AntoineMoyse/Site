@page
@model Site.Pages.Order.CommandeModel
@{
}
@if (Model.Cart.Count() == 0)
{
    <h3 class="text-center" style="margin-top:110px;">Aucun objet dans votre panier, veuillez choisir au moins un produit.
    </h3>
    <a asp-page="../Index" class="btn btn-danger">Menu Principal</a>
}
else
{
    <h3 class="text-center" style="margin-top:110px;">Encore une étape avant de pouvoir commander les produits dans votre
        panier.</h3>
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Commande.Country" class="control-label"></label>
                    <input asp-for="Commande.Country" class="form-control" />
                    <span asp-validation-for="Commande.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Commande.City" class="control-label"></label>
                    <input asp-for="Commande.City" class="form-control" />
                    <span asp-validation-for="Commande.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Commande.CodePostal" class="control-label"></label>
                    <input asp-for="Commande.CodePostal" class="form-control" />
                    <span asp-validation-for="Commande.CodePostal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Commande.Adresse" class="control-label"></label>
                    <input asp-for="Commande.Adresse" class="form-control" />
                    <span asp-validation-for="Commande.Adresse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Commande.Livraison.Name" class="control-label"></label>
                    <select asp-for="Commande.LivraisonId" class="form-control" asp-items="@Model.Options">
                        <option value="">--Selectionner un moyen de livraison--</option>
                    </select>
                    <span asp-validation-for="Commande.Livraison.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @foreach (var livraison in Model.Livraisons)
                    {
                        <div style="margin-top: 10px;">@livraison.Name : @livraison.Description.</div>
                    }
                </div>
                <div class="form-group">
                    <a asp-page="/Panier/Cart" type="button" class="btn btn-danger">Retour Panier</a>
                    <input type="submit" class="btn btn-info btn-md" value="Commander">
                </div>
            </form>
        </div>
    </div>
}

<script>
</script>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}