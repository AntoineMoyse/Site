<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Mon Site</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <div>
        <nav class="navbar navbar-dark navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/Index">
                    <img class="responsive-img" src="/images/Logo/Logo_simple.png" width="200" height="60"
                        alt="" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="text-white" asp-area="" asp-page="/Products/Product_first">Produits Nautiques</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-white" asp-area="" asp-page="/Company/Leman">Challenge 24H Léman</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Products/Index">Admin Produit</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Categorie/Index">Admin Catégorie</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Order/Index">Admin Commande</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Shipping/Index">Admin Livraison</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/User/Index">Admin Client</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Company/FAQ/Index">Admin FAQ</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Company/About">Qui sommes nous ?</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Company/FAQ/FAQ">Des questions ?</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Company/Partenaires">Nos partenaires</a>
                            </li>
                            <li class="nav-item">
                                <a class="text-white" asp-area="" asp-page="/Company/Contact">Contact / Devis</a>
                            </li>
                        }
                    </ul>
                    @await Component.InvokeAsync("CartCount")
                    <partial name="_LoginPartial"/>

                </div>
            </div>
        </nav>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Mon Site - <a asp-area="" asp-page="/Privacy">Privacy</a> - <a asp-area=""
                asp-page="/Company/Contact">Contact</a> - <a asp-area="" asp-page="/Company/About">A propos de nous</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>