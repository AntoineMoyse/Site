@using Microsoft.AspNetCore.Identity
@using Site.Models.ApplicationUser

@inject SignInManager<Client> SignInManager
@inject UserManager<Client> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="text-white" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index">Mon Compte</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
            asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-link text-white" style="font-weight: bold;">Se
                    d√©connecter</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="text-white" id="register" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
        </li>
        <li class="nav-item">
            <a class="text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
        </li>
    }
</ul>