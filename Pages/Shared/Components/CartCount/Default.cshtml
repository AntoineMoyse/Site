@model Site.Pages.Shared.CartCount

<div class="collapse navbar-collapse">
    <ol class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="text-white" style="margin-top: 10px; font-weight: bold; padding-right:5px;" asp-area="" asp-page="/Panier/Cart">Panier</a>
            <span class="text-white" style="margin-top: 10px; font-weight: bold; padding-right:30px;">
                @{
                    int i = 0;
                }
                @foreach (var item in Model.Cart)
                {
                    i = i + item.Quantite;
                }
                @i
            </span>
        </li>
    </ol>
</div>