@page
@model Site.Pages_Question.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:110px;">Index</h1>

<p>
    <a asp-page="Create">Créer une nouvelle question</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].question)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].reponse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reponse)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editer</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
