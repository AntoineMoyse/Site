@page
@model Site.Pages.Shipping.CreateModel

@{
    ViewData["Title"] = "Créer un nouveau moyen de livraison";
}

<h1 style="margin-top:110px;">Création Livraison</h1>

<h4>Livraison</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Livraison.Name" class="control-label"></label>
                <input asp-for="Livraison.Name" class="form-control" />
                <span asp-validation-for="Livraison.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livraison.Description" class="control-label"></label>
                <input asp-for="Livraison.Description" class="form-control" />
                <span asp-validation-for="Livraison.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livraison.Prix" class="control-label"></label>
                <input asp-for="Livraison.Prix" class="form-control" />
                <span asp-validation-for="Livraison.Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
