@page
@model Site.Pages.Shipping.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:110px;">Index</h1>

<p>
    <a asp-page="Create">Créer une nouvelle livraison</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Livraison[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livraison[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Livraison[0].Prix)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Livraison) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editer</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Détails</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
