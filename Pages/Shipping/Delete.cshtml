@page
@model Site.Pages.Shipping.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1 style="margin-top:110px;">Supprimer</h1>

<h3>Etes vous sûr de vouloir supprimer cette livraison ?</h3>
<div>
    <h4>Livraison</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livraison.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livraison.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livraison.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livraison.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Livraison.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Livraison.Prix)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Livraison.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>
