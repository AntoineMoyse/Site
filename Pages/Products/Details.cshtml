@page
@model Site.Pages_Products.DetailsModel

@{
    ViewData["Title"] = "Détails";
}

<h1 style="margin-top:110px;">Détails</h1>

<div>
    <h4>Produit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Categorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Categorie.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.DescriptionCourte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.DescriptionCourte)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Image)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Product.Image != null)
            {
                var base64 = Convert.ToBase64String(Model.Product.Image);
                var image = String.Format("data:image/png;base64,{0}", base64);
                <img src="@image" alt="" class="img-fluid">
            }
            else
            {
                <img src="~/images/no-image-found.jpg" class="img-fluid">
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Editer</a> |
    <a asp-page="./Index">Retour à la liste</a>
</div>
