@page
@model Site.Pages_Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-top:110px;">Index</h1>

<p>
    <a asp-page="Create">Créer un nouveau produit</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Categorie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].DescriptionCourte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorie.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescriptionCourte)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        var base64 = Convert.ToBase64String(item.Image);
                        var image = String.Format("data:image/png;base64,{0}", base64);
                        <img src="@image" alt="" class="img-fluid">
                    }
                    else
                    {
                        <img src="~/images/no-image-found.jpg" class="img-fluid">
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Editer</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Détails</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
