@page
@model Site.Pages_Products.CreateModel

@{
    ViewData["Title"] = "Créer un nouveau produit";
}

<h1 style="margin-top:110px;">Créer un nouveau produit</h1>

<h4>Produit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Categorie.Name" class="control-label"></label>
                <select asp-for="Product.CategorieId" class ="form-control" asp-items="@Model.Options">
                    <option value="">--Selectionner une catégorie--</option>
                </select>
                <span asp-validation-for="Product.Categorie.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.DescriptionCourte" class="control-label"></label>
                <input asp-for="Product.DescriptionCourte" class="form-control" />
                <span asp-validation-for="Product.DescriptionCourte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea rows="4" asp-for="Product.Description" class="form-control form-control-sm"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <label asp-for="Image" class="col-md-2 control-label"></label>
            <input type="file" asp-for="Image">
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
